{
    "$schema": "./node_modules/oxlint/configuration_schema.json",
    "env": {
        "browser": true
    },
    "ignorePatterns": [
        "node_modules/**",
        "packages/**/dist/**",
        "examples/**"
    ],
    "plugins": [
        "eslint",
        "typescript",
        "unicorn",
        "oxc",
        "react",
        "react-perf",
        "nextjs",
        "import",
        "jsdoc",
        "jsx-a11y",
        "node",
        "promise",
        "jest",
        "vitest"
    ],
    "categories": {
        "restriction": "error"
    },
    "rules": {
        "no-undefined": "allow",
        "no-plusplus": "allow",
        "no-conditional-in-test": "allow",
        "require-to-throw-message": "allow",
        "no-async-await": "allow",
        "no-rest-spread-properties": "allow",
        "no-optional-chaining": "allow",
        "no-process-env": "allow",
        "prefer-tag-over-role": "allow",

        "jsx-filename-extension": ["error", { "extensions": [".tsx"] }],
        "no-console": ["error", { "allow": ["error", "debug", "log"] }],
        "no-autofocus": "allow",
        "no-void": ["error", { "allowAsStatement": true }],
        "array-type": [
            "error",
            {
                "default": "array-simple"
            }
        ],

        "explicit-module-boundary-types": "allow",
        "no-default-export": "allow",
        "explicit-function-return-type": [
            "error",
            {
                "allowExpressions": true,
                "allowFunctionsWithoutTypeParameters": true
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "packages/auth/src/fixtures/createAuthTest.ts"
            ],
            "rules": {
                "@typescript-eslint/no-require-imports": "off",
                "typescript-eslint(no-require-imports)": "allow"
            }
        }
    ]
}
